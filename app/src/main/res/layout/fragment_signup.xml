<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup_headline"
        android:layout_marginBottom="@dimen/signup_headline_bottom_margin"
        style="@style/HeadlineStyle" />

    <EditText
        style="@style/SignupInputFieldStyle"
        android:inputType="textPersonName"
        android:hint="@string/signup_label_first_last_name" />

    <EditText
        style="@style/SignupInputFieldStyle"
        android:inputType="textEmailAddress"
        android:hint="@string/signup_label_email_address" />

    <EditText
        style="@style/SignupInputFieldStyle"
        android:inputType="phone"
        android:hint="@string/signup_label_mobile_number" />

    <EditText
        style="@style/SignupInputFieldStyle"
        android:inputType="date"
        android:hint="@string/signup_label_dob" />

    <EditText
        style="@style/SignupInputFieldStyle"
        android:inputType="number"
        android:hint="@string/signup_label_ssn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_tos"
        style="@style/TOSTextStyle" />

    <RelativeLayout
        style="@style/ConfirmButtonStyle">

        <ImageView
            android:layout_width="@dimen/signup_button_secure_icon_width_height"
            android:layout_height="@dimen/signup_button_secure_icon_width_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/signup_button_secure_icon_margin_left"
            android:background="@drawable/Lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_label_confirm_button"
            style="@style/ConfirmButtonTextStyle" />

    </RelativeLayout>

</LinearLayout>