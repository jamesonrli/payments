<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're approved for $%.2f!"
        android:layout_marginBottom="@dimen/checkout_flow_headline_bottom_margin"
        style="@style/HeadlineStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What fits your budget?"
        style="@style/SublineStyle" />

    <LinearLayout
        android:id="@+id/details_loan_options_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/button_rounded_corners" />
        <include layout="@layout/button_rounded_corners" />
        <include layout="@layout/button_rounded_corners" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/simple_horizontal_line"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest (%d% APR)\n$%.2f"
            style="@style/LoanDetailsTextStyle" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:rotation="90"
            android:background="@drawable/simple_horizontal_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total of Payments\n$%.2f"
            style="@style/LoanDetailsTextStyle"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/simple_horizontal_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Payment due on or after %s\nBy confirming this charge I agree to the Loan Terms"
        android:layout_marginBottom="15dp"
        style="@style/SublineStyle" />

    <include layout="@layout/button_rounded_locked" />

</LinearLayout>